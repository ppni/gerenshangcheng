.user_box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.user_box .avt_wrap {
  width: 160rpx;
  height: 160rpx;
  border-radius: 100%;
  overflow: hidden;
}

.user_box .avt_wrap .avt {
  display: block;
  width: 100%;
  height: 100%;
}

.user_box .name {
  font-size: 30rpx;
  margin-top: 20rpx;
}